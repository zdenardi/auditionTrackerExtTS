{
  "manifest_version": 3,
  "name": "AuditionTracker",
  "description": "Adds Features for Actors Access.",
  "options_ui": {
    "page": "src/pages/options/index.html"
  },
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "32": "icon-32.png"
    }
  },
  "icons": {
    "128": "icon-128.png"
  },
  "background": {
    "service_worker": "./src/pages/background/authorize.ts",
    "scripts": [
      "./src/pages/background/authorize.ts"
    ]
  },
  "permissions": [
    "activeTab",
    "webRequest",
    "identity",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.actorsaccess.com/*"
      ],
      "js": [
        "./src/pages/content/jquery-3.7.1.min.js",
        "./src/pages/content/aaplus.js"
      ]
    },
    {
      "matches": [
        "*://*.actorsaccess.com/ucart/"
      ],
      "js": [
        "./src/pages/content/sendToGoogleSheets.ts"
      ]
    }
  ],
  "devtools_page": "src/pages/devtools/index.html",
  "web_accessible_resources": [
    {
      "resources": [
        "contentStyle.css",
        "icon-128.png",
        "icon-32.png"
      ],
      "matches": []
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "auditions2Sheets@example.com",
      "strict_min_version": "58.0"
    }
  }
}